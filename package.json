{
  "name": "playground-node",
  "config": {
    "main": "dist/index.js"
  },
  "scripts": {
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "node --watch --watch-preserve-output $npm_package_config_main",
    "serve": "node $npm_package_config_main",
    "build": "npm run build-ts",
    "prestart": "npm run build",
    "start": "npm run serve",
    "prewatch": "npm run build",
    "watch": "concurrently -k -p \"[{name}]\" -n \"watch-ts,watch-node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test:type": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts}\""
  },
  "devDependencies": {
    "@types/eslint": "8.21.2",
    "@types/jest": "29.4.4",
    "@types/node": "18.15.3",
    "@typescript-eslint/parser": "5.55.0",
    "concurrently": "7.6.0",
    "eslint": "8.36.0",
    "jest": "29.5.0",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}