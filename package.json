{
  "name": "playground-node",
  "type": "module",
  "scripts": {
    "watch": "node --watch --watch-preserve-output src/index.ts",
    "start": "node src/index.ts",
    "test": "node --test './src/**/*.test.*'",
    "test:type": "tsc --noEmit",
    "lint": "eslint '**/*.{[mc]js,ts}'",
    "test:all": "concurrently 'npm run test:type' 'npm run lint' 'npm run test'"
  },
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/node": "24.10.7",
    "@typescript-eslint/parser": "8.52.0",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "typescript": "5.9.3"
  }
}
