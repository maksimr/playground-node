{
  "name": "playground-node",
  "config": {
    "main": "dist/index.js"
  },
  "babel": {
    "retainLines": true,
    "sourceMap": "inline"
  },
  "scripts": {
    "build": "tsc",
    "watch": "node -r ts-node/register --enable-source-maps --watch --watch-preserve-output src/",
    "serve": "node $npm_package_config_main",
    "prestart": "npm run build",
    "start": "npm run serve",
    "test": "jest",
    "test:type": "tsc --noEmit",
    "test:codestyle": "eslint \"**/*.{js,ts}\"",
    "test:all": "concurrently 'npm run test:type' 'npm run test:codestyle' 'npm run test'"
  },
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/jest": "29.5.12",
    "@types/node": "20.16.1",
    "@typescript-eslint/parser": "8.3.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  }
}