{
  "name": "playground-node",
  "config": {
    "main": "dist/index.js"
  },
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "watch:node": "node --enable-source-maps --watch --watch-preserve-output $npm_package_config_main",
    "serve": "node $npm_package_config_main",
    "build": "npm run build:ts",
    "prestart": "npm run build",
    "start": "npm run serve",
    "prewatch": "npm run build",
    "watch": "concurrently -k -p \"[{name}]\" -n \"watch:ts,watch:node\" -c \"yellow.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "test": "jest",
    "test:type": "tsc --noEmit",
    "test:codestyle": "eslint \"**/*.{js,ts}\"",
    "test:all": "concurrently 'npm run test:type' 'npm run test:codestyle' 'npm run test'"
  },
  "devDependencies": {
    "@types/eslint": "8.44.4",
    "@types/jest": "29.5.5",
    "@types/node": "18.18.5",
    "@typescript-eslint/parser": "6.7.5",
    "concurrently": "8.2.1",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}